# ============ BLOCKCHAIN CONFIGURATION ============

# Chave privada da carteira que fará o deploy (NUNCA COMPARTILHE!)
PRIVATE_KEY=your_private_key_here

# Endereço da carteira treasury que receberá os fundos
TREASURY_WALLET=0x0000000000000000000000000000000000000000

# ============ RPC ENDPOINTS ============

# Infura Project ID (obtenha em https://infura.io/)
INFURA_PROJECT_ID=your_infura_project_id

# URLs RPC customizadas (opcional)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your_project_id
GOERLI_RPC_URL=https://goerli.infura.io/v3/your_project_id
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_project_id

# ============ API KEYS ============

# Etherscan API Key para verificação de contratos
ETHERSCAN_API_KEY=your_etherscan_api_key

# CoinMarketCap API Key para gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ============ METADATA CONFIGURATION ============

# URI para metadados ocultos (antes da revelação)
HIDDEN_METADATA_URI=https://gateway.pinata.cloud/ipfs/QmYourHiddenMetadataHash

# Base URI para metadados revelados
BASE_METADATA_URI=https://gateway.pinata.cloud/ipfs/QmYourMetadataHash/

# ============ FRONTEND CONFIGURATION ============

# Endereço do contrato deployado (será preenchido após deploy)
REACT_APP_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Rede alvo (1 = mainnet, 5 = goerli, 11155111 = sepolia)
REACT_APP_CHAIN_ID=1

# ============ DEVELOPMENT ============

# Habilitar relatório de gas
REPORT_GAS=true

# Modo de desenvolvimento
NODE_ENV=development

